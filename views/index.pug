extends layout

block content
  each k,v in decks
    div(id='deck_'+k, 'data-name'=v['name'], 'data-link'=v['link'], 'data-nickname'=v['nickname'])


  - var deck_for_card = []
  - var counter = 0
  each card in tarot
    - var random_num = Math.round(Math.random() * 4)
    - var random_deck_token = deck_tokens[random_num]
    - var next_deck_token = null
    if random_deck_token == 4
      - next_deck_token = deck_tokens[1]
    else
      - next_deck_token = deck_tokens[random_deck_token+1]
    end
    - deck_for_card.push(random_deck_token)

    div(id='random'+(counter+1), class='random-card', 'data-deck-token'=random_deck_token, 'data-card-token'=all_cards[counter], 'data-card-name'=tarot[all_cards[counter]]['name'], 'data-img'='https://brackish.s3.us-west-1.amazonaws.com/'+ card['decks'][random_deck_token]['image'], 'data-img-rws'='https://brackish.s3.us-west-1.amazonaws.com/'+ card['decks']['rws']['image'],'data-deck'=decks[random_deck_token]['nickname'], 'data-img-thoth'='https://brackish.s3.us-west-1.amazonaws.com/'+ card['decks']['thoth']['image'], 'data-img-cbd'='https://brackish.s3.us-west-1.amazonaws.com/'+ card['decks']['cbd']['image'], 'data-img-mary'='https://brackish.s3.us-west-1.amazonaws.com/'+ card['decks']['mary']['image'], 'data-img-brady'='https://brackish.s3.us-west-1.amazonaws.com/'+ card['decks']['brady']['image'], 'data-deck-link'=decks[random_deck_token]['link'], 'data-deck-nickname'=decks[random_deck_token]['nickname'], 'data-next-img'='https://brackish.s3.us-west-1.amazonaws.com/'+ card['decks'][random_deck_token]['image'])

    - counter += 1

  div.row
    each card, index in cards
      - var order = (index*2)+1
      div(class='mt-4 col-12 col-md-4 order-'+order+' order-md-'+(index+1))
        div.back(id='back'+(index+1))
          if index == 0
            p 
